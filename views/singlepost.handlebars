<div class="post">
    <div class="post-header">
      <span>
          <h2 class="text-left" id="post-title">{{post.title}}</h2>
      </span>
      <span>
      <p class="text-right" id="post-info">Posted by {{post.user.username}} on {{format_date post.date_created}}</p>
      </span>
    </div>

    <div class = "post-body">
      {{post.content}}
    </div>
</div>

{{#if post.comments}}
<div class="post comments">
      <div class="post-header">
        <h2>Comments</h2>
      </div>

      <div class="post-body">
        {{#each post.comments}}
          <div>
            <p>
              "{{comment}}"
            </p>
            <p style="font-style: italic;">
              &mdash; {{user.username}}, {{format_date date_created}}
            </p>
          </div>
        {{/each}}
      </div>
  {{/if}}
</div>

{{#if logged_in}}
<div>
    <form id="new-comment-form" class="post">
      <div class="card-header post-header">
        <h3>Add New Comment</h3>
      </div>

      <div class="card-body post-body">
        <input type="hidden" name="post_id" value="{{post.id}}" />

        <label class="form-label" for="comment-body">Comment</label>

        <textarea name="comment-body" class="form-input"></textarea>

        <button type="submit" class="btn comment-button">Submit</button>
      </div>
  </form>
</div>
{{else}}
{{/if}}

  <script src="/js/comment.js"></script>